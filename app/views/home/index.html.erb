<h1>Home#index</h1>

<% if user_signed_in? %>
  You are signed in as <strong><%= current_user.email %></strong>
  <br>
  Your telephone number is <strong><%= current_user.tel_number %></strong>
  <br>
  <%= link_to "List of accounts", accounts_path %>
  <br>
  <%= link_to "Your profile", profile_path(current_user) %>
  <br>
  <br>
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete, id:current_user.id} %>
<% else %>
  Please <%= link_to "sign in", new_user_session_path %> sign in or  <%= link_to "sign up", new_user_registration_path %>
<% end %>
